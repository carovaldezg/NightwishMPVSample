<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/alabaster"
    android:weightSum="1">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.60"
        android:adjustViewBounds="false"
        android:src="@drawable/nightwish_landscape_form"
        android:background="@color/denim"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_form_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium_extra"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:layout_marginTop="@dimen/spacing_medium_extra"
            android:ems="10"
            android:hint="@string/activity_form_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/activity_form_phone_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium_extra"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:ems="10"
            android:hint="@string/activity_form_phone_number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/activity_form_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium_extra"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:ems="10"
            android:hint="@string/activity_form_email"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/spacing_medium_extra"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_form_attachment_title_text_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_form_delete_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_clear_black_48dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_form_attachment_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium_extra"
            android:layout_marginStart="@dimen/spacing_medium_extra"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/attachment" />

            <ImageView
                android:id="@+id/activity_form_attachment_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_attachment_red_24dp" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_form_send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@drawable/grey_rounded_button"
            android:gravity="center"
            android:text="@string/activity_form_send_button"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>